[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Target = pacman-mirrorlist

[Action]
Description = Updating mirrorlist...
When = PostTransaction
Depends = reflector
Exec = reflector --verbose --latest 64 --number 16 --age 24 --protocol https --country 'United States' --sort rate --save /etc/pacman.d/mirrorlist
